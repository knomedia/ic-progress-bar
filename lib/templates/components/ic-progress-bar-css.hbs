
ic-progress-bar {
    font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
    color: darkgrey;
  }
 .ic-progress-bar-border {
   width: 100%;
   border: solid 1px darkgrey;
   border-radius: 2px;
   z-index: 3;
 }
 .ic-progress-bar-container {
   width: 100%;
   position: relative;
 }
 .ic-progress-bar-fill {
   background: lightgrey;
   border-radius: 2px;
   height: 30px;
 }
 .ic-progress-label {
   font-size: 0.8em;
   padding-left: 2px;
 }
